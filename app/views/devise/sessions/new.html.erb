<div class="common-form">

  <h2 class="title">Sign in</h2>

  <div class="form-input-data">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field input-group">
      <%= f.label :email,'<i class="fa fa-envelope-o" aria-hidden="true"></i>'.html_safe, class:"input-group-addon" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:" Enter input email ...",class:"input-data-event form-control" %>
    </div>

    <div class="form-password">
      <div class="field input-group">
          <%= f.label :password, '<i class="fa fa-unlock" aria-hidden="true"></i>'.html_safe, class:"input-group-addon"  %>
          <%= f.password_field :password, autocomplete: "current-password",placeholder:" Enter input password ...", class:"input-data-event form-control" %>
      </div>
      <div class="forgot-passwd btn-hover">
          <%= link_to "Forgot your password?", new_password_path(resource_name) %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field remember-passwd">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>
  </div>

  <div class="footer-form btn-hover">
        <%= link_to "Don't have an account?", new_registration_path(resource_name) %>
  </div>
</div>
